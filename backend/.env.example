# AfriHealth Ledger Backend Environment Configuration

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3001
API_VERSION=1.0.0
FRONTEND_URL=http://localhost:5173

# ============================================
# Hedera Network Configuration
# ============================================
# Get free testnet account at: https://portal.hedera.com
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=302e020100300506032b65700422042000000000000000000000000000000000
HEDERA_PUBLIC_KEY=302a300506032b6570032100

# ============================================
# Smart Contract Addresses
# ============================================
# Diamond Contract Address (set after deployment)
DIAMOND_CONTRACT_ADDRESS=0.0.CONTRACT_ID

# Token Addresses (optional - created by diamond contract)
PLATFORM_CREDIT_TOKEN_ADDRESS=
INSURANCE_POOL_TOKEN_ADDRESS=
REPUTATION_NFT_ADDRESS=

# JWT Configuration
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_MIN_32_CHARS
JWT_REFRESH_SECRET=YOUR_REFRESH_SECRET_KEY_MIN_32_CHARS
JWT_EXPIRES_IN=24h

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/afrihealth
MONGODB_URL=mongodb://localhost:27017/afrihealth

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:3000

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=YOUR_SESSION_SECRET

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=YOUR_EMAIL@gmail.com
SMTP_PASS=YOUR_APP_PASSWORD

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# External API Keys
CHAINLINK_API_KEY=YOUR_CHAINLINK_API_KEY
INFURA_PROJECT_ID=YOUR_INFURA_PROJECT_ID
ALCHEMY_API_KEY=YOUR_ALCHEMY_API_KEY

# Feature Flags
ENABLE_EMERGENCY_ACCESS=true
ENABLE_AI_POLICY=true
ENABLE_INSURANCE_POOL=true
ENABLE_MULTILINGUAL=true
ENABLE_ADVANCED_ANALYTICS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Performance Configuration
CACHE_TTL=3600
MAX_CONNECTIONS=100
TIMEOUT_SECONDS=30

# Development Settings
DEBUG=true
PRETTY_PRINT_JSON=true
ENABLE_API_DOCS=true

# Production Settings
TRUST_PROXY=false
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
